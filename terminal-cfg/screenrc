altscreen on
autodetach on # already enabled by default
bell_msg ""
bindkey ^[[1;2C next # shift right arrow
bindkey ^[[1;2D prev # shift left arrow
caption splitonly
defscrollback 65536
hardstatus alwayslastline "%{= k}%-w%{= KW}%50>[%n %t]%{-}%+w%<"
maptimeout 5  # http://vim.wikia.com/wiki/GNU_Screen_integration
nethack on
nonblock 5
obuflimit 1024
shell -$SHELL
shelltitle "?"
startup_message off
term "screen-256color"
vbell off

