[alias]
	df = difftool
	lg = log --pretty=format:'[%C(auto,red)%h%Creset][%C(auto,green)%cd%Creset][%C(auto,blue)%aE%Creset]: %s' --date=short --decorate=short --abbrev=7 -30
	st = status -uno
[core]
	autocrlf = false
	editor = vim --noplugin
	excludesfile = ~/.gitignore
	fileMode = false
	ignorecase = false
	longpaths = true
	whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
[blame]
	date = short
	showEmail = true
[push]
	default = simple
[pull]
	ff = only
[color]
	status = always
	ui = auto
[gc]
	auto = 256
[diff]
	prompt = true
	renamelimit = 0
	renames = copies
	tool = vidiff
[difftool "vidiff"]
	cmd = vim -d $LOCAL $REMOTE
	trustExitCode = true
[merge]
	tool = vimerge
[mergetool "vimerge"]
	cmd = vim -d $LOCAL $REMOTE $BASE $MERGED
	trustExitCode = true
[user]
	email = ivan@bogomolov.su
	name = Ivan Bogomolov
