[alias]
    df = difftool
    lg = log --pretty=format:'[%C(auto,red)%h%Creset][%C(auto,green)%cd%Creset][%C(auto,magenta)%aE%Creset]: %s' --graph --date=short --decorate=short
    st = status -uno
[core]
    autocrlf = input
    editor = vim --noplugin
    excludesfile = ~/.gitignore
    fileMode = false
    ignorecase = false
    longpaths = true
[color]
    status = always
[gc]
    auto = 256
[diff]
    prompt = true
    renamelimit = 0
    renames = copies
    tool = vidiff
[difftool "vidiff"]
    cmd = vim -d $LOCAL $REMOTE
    trustExitCode = true
[merge]
    tool = vimerge
[mergetool "vimerge"]
    cmd = vim -d $LOCAL $REMOTE $BASE $MERGED
    trustExitCode = true
[push]
    default = simple
[user]
    email = ivan@bogomolov.su
    name = Ivan Bogomolov
