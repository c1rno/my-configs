[alias]
    df = difftool
    lg = log --pretty=format:'[%C(auto,red)%h%Creset][%C(auto,green)%cd%Creset][%C(auto,magenta)%aE%Creset]: %s' --graph --date=short --decorate=short
    st = status -uno
[core]
    # editor = emacs -Q -nw
    # editor = vi --noplugin
    autocrlf = input
    editor = code --wait
    excludesfile = ~/.gitignore
    fileMode = false
    longpaths = true
[color]
    status = always
[gc]
    auto = 256
[diff]
    # tool = ediff
    # tool = vidiff
    prompt = true
    renamelimit = 0
    renames = copies
    tool = vsdiff
[difftool "vsdiff"]
    cmd = code --wait --diff $LOCAL $REMOTE
    trustExitCode = false
[difftool "vidiff"]
    cmd = vi -R -d $LOCAL $REMOTE  # it's symlink to near vi.sh
    trustExitCode = true
[difftool "ediff"]
    cmd = emacs --eval \"(ediff-files \\\"$LOCAL\\\" \\\"$REMOTE\\\")\"
    trustExitCode = true
[merge]
    tool = vidiff
[mergetool "vidiff"]
    cmd = vi -d $LOCAL $REMOTE $BASE $MERGED
    trustExitCode = true
[mergetool "ediff"]
    cmd = emacs --eval \"(ediff-merge-files-with-ancestor \\\"$LOCAL\\\" \\\"$REMOTE\\\" \\\"$BASE\\\" nil \\\"$MERGED\\\")\"
    trustExitCode = true
[push]
    default = simple
